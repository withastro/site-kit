---
import path from "node:path"
import Layout from "../../../layouts/Base.astro"

const components = await Astro.glob("./*.astro")

type Route = {
	href: string
	text: string
}

const componentRoutes = components.map(({ url }) => ({
	href: url!,
	text: path.basename(url!),
}))
---

<Layout title="Site Kit">
	<h2><code>&lt;SEO /&gt;</code></h2>
	<ul>
		{
			componentRoutes.map(({ href, text }: Route) => (
				<li>
					<a href={href} class="h5">
						{text}
					</a>
				</li>
			))
		}
	</ul>
</Layout>

<style>
	ul {
		margin: 0;
		padding: 0;
		list-style: none;
	}

	a {
		text-transform: capitalize;
	}
</style>
