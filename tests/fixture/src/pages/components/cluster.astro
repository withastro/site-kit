---
import Cluster from '@astrojs/site-kit/components/Cluster.astro';
import Layout from '../../layouts/Base.astro';
---

<Layout title="Cluster">
	<h1>Cluster.astro</h1>

	<Cluster style="gap: var(--gap-2);" class="gap-var">
		<p>home</p>
		<p>about</p>
		<p>contact</p>
	</Cluster>

	<hr />

	<Cluster
		gap={20}
		style="gap: 20px; align-items: center; justify-content: center;"
		class="align-start"
	>
		<p>home</p>
		<p>about</p>
		<p>contact</p>
	</Cluster>
</Layout>

<style>
	[data-cluster] {
		padding-block: var(--gap-3);
	}
</style>
