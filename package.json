{
  "name": "@astrojs/site-kit",
  "version": "5.0.0",
  "description": "Styles, components, and tooling config for use in *.astro.build websites",
  "type": "module",
  "author": "withastro",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/withastro/site-kit.git"
  },
  "bugs": "https://github.com/withastro/site-kit/issues",
  "homepage": "https://github.com/withastro/site-kit#readme",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./assets/*": "./src/assets/*",
    "./components": "./src/components/index.ts",
    "./components/*": "./src/components/*",
    "./eslint": "./eslint.config.cjs",
    "./eslint.react": "./eslint.config.react.cjs",
    "./prettier": "./prettier.config.mjs",
    "./typescript": "./tsconfig.json",
    "./tailwind": "./tailwind.config.cjs",
    "./tailwind.css": "./tailwind.css"
  },
  "files": [
    "src",
    "eslint.config.cjs",
    "eslint.config.react.cjs",
    "prettier.config.mjs",
    "tailwind.config.cjs",
    "tailwind.css",
    "tsconfig.json"
  ],
  "scripts": {
    "lint": "run-s --continue-on-error lint:*",
    "lint:types-root": "tsc -b",
    "lint:types": "pnpm -r exec tsc -b",
    "lint:astro": "astro check",
    "lint:eslint": "eslint . --cache --fix --report-unused-disable-directives",
    "lint:prettier": "prettier . \"**/*.astro\" --cache --write",
    "test": "playwright test",
    "test:e2e": "run-s test:build test:preview",
    "test:build": "astro build --root tests/fixture",
    "test:preview": "astro preview --root tests/fixture"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "astro": "2.2.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-astro": "^0.29.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier-plugin-astro": "^0.12.0",
    "prettier-plugin-tailwindcss": "^0.5.4",
    "smartypants": "^0.1.6"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@playwright/test": "^1.32.3",
    "@types/eslint": "^8.44.2",
    "eslint": "^8.49.0",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.32.3",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.3.1",
    "typescript": "^5.0.4"
  },
  "peerDependencies": {
    "eslint": ">=8",
    "prettier": ">=3",
    "tailwindcss": ">=3.3"
  },
  "pnpm": {
    "patchedDependencies": {
      "astro@2.2.1": "patches/astro@2.2.1.patch"
    }
  },
  "eslintConfig": {
    "extends": [
      "./eslint.config.cjs"
    ]
  }
}
