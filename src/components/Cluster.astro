---
import type { HTMLAttributes, HTMLTag } from 'astro/types';

export interface Props extends HTMLAttributes<'div'> {
	as?: HTMLTag;
}

const { as: Component = 'div', class: className = '', ...attrs } = Astro.props;
---

<Component class:list={['cluster', className]} {...attrs}>
	<slot />
</Component>

<style>
	.cluster {
		box-sizing: border-box;
		display: flex;
		flex-wrap: wrap;
	}
</style>
