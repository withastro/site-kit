---
import type { HTMLAttributes, HTMLTag } from 'astro/types';

export interface Props extends HTMLAttributes<'div'> {
	as?: HTMLTag;
}

const { as: Component = 'section', class: className = '', ...attrs } = Astro.props;
---

<Component class:list={['stack', className]} {...attrs}>
	<slot />
</Component>

<style>
	.stack {
		display: flex;
		flex-direction: column;
	}
</style>
